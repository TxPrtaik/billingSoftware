<%-include('navbar.ejs')%>
<div class="container">
    <h2 class="main-title"> User Profile</h2>
    <div class="row justify-content-center align-item-center">
        <div class="col-md-8  rounded-4 shadow p-4">
          <div class="row">
            <div class="col-md-6">
              <div class="row justify-content-center p-0 align-item-center">
                <div class="p-0" style=" height: 250px; width: 250px;border-radius: 50%;">
                  <img src="/userimage/<%-data.image%>" style="margin:0px auto; height: 250px; width: 250px;border-radius: 50%;"/>

                </div>
              </div>
              <form method="post" enctype="multipart/form-data" action="/update-userimage">
                 <div class="input-group mt-3 ">
                  <input type="file" class="form-control " name="img" required ><button type="submit" class="btn btn-primary "><i class="fa fa-upload"></i></button>
                 </div>            

              </form>
            </div>
            <div class="col-md-6">
              <form  method="post"   action="/save-account">
                
                
            <label class="mb-2" style="font-size: 14px;">Username<span class="text-danger">*</span> :</label>
            <input type="text" class="form-control mb-3" value="<%-data.username%>" name="username" required placeholder="Jon Doe">
            <label class="mb-2" style="font-size: 14px;">Password<span class="text-danger">*</span> :</label>
            <input type="text" class="form-control" value="<%-data.password%>" name="password" required placeholder="xxxxxxxx">
            <button class="btn btn-primary mt-5 w-100"  onclick="" type="submit">Update</button>
              </form>
            </div>
          </div>
         
   
        </div>
    </div>
</div>
<%-include('footer.ejs')%>